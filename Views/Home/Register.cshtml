@model Register

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">📝 User Registration</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="Register" method="post">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">Full Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Mobile" class="form-label">Mobile</label>
                                <input asp-for="Mobile" class="form-control" placeholder="Enter mobile number" />
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Dob" class="form-label">Date of Birth</label>
                                <input asp-for="Dob" type="date" class="form-control" />
                                <span asp-validation-for="Dob" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Username" class="form-label">Username</label>
                                <input asp-for="Username" class="form-control" placeholder="Choose a username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-12">
                                <label asp-for="Role" class="form-label">Select Role</label>
                                <select asp-for="Role" class="form-control">
                                    <option value="">-- Please select --</option>
                                    <option>User</option>
                                    <option>Admin</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-block">Register</button>
                        </div>

                        <div class="text-center mt-3">
                            Already have an account? <a asp-action="Login" class="btn btn-link">Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
