@model List<Category>
<partial name="_notifications"/>
<div class="row pt-4 pb-3">
    <div class="col-6">
        <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
<i class="bi-plus-circle"></i>Create new Category
</a>     
</div>
</div>



 <table class="table table-border table-striped">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Orders</th>
        <th>Actions</th>
    </tr>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group-sm">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
